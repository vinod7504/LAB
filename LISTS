Sorting of the list
#descending order
a=[1,4,8,5,0]
for i in range(0,len(a)):
    for j in range(i+1,len(a)):
        if(a[i]<a[j]):
            k=a[i]
            a[i]=a[j]
            a[j]=k
print("After sorting the elements are",a)

#ascending order
a=[1,4,8,5,0]
for i in range(0,len(a)):
    for j in range(i+1,len(a)):
        if(a[i]>a[j]):
            k=a[i]
            a[i]=a[j]
            a[j]=k
print("After sorting the elements are",a)

#checking for a number
